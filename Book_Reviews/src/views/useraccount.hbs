
<h2>User Page</h2>

<h2>Hello, {{user.username}}.</h2>

<form method="post" action="/users/results">
  <input type="text" name="title" placeholder="Search titles" />
  <br />
  <button>Search</button>
</form>

<ul>
  {{#each reviews}}
      <li>
        <img src="{{this.image}}"><br>
        <h3>{{this.book}}</h3>
        <h3>{{this.authors}}</h3>
        <h4>{{this.title}}<h4>
        <p>{{this.content}}<p>
      </li>
  {{/each}}
</ul>
